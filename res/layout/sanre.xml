<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sanre_top_bg"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="手机散热器"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sanre_title_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sanre_title_bg"
        android:gravity="center" >

        <TextView
            android:id="@+id/sanre_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="您的手机急需降温"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="315dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/sanre_phone_bg"
                android:gravity="center" >

                <LinearLayout
                    android:layout_width="150dip"
                    android:layout_height="210dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="手机温度:"
                        android:textColor="@android:color/black" 
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/sanre_temperature"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" 
                        android:gravity="center"
                        android:textColor="@android:color/black" 
                        android:textSize="40sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dip"
                android:layout_height="315dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="15dip"
                android:background="@drawable/temperature_bg"
                android:gravity="bottom" >

                <LinearLayout
                    android:layout_width="21dip"
                    android:layout_height="242dip"
                    android:layout_marginBottom="25dip"
                    android:layout_marginLeft="23dip" >

                    <LinearLayout
                        android:id="@+id/temperature_bar"
                        android:layout_width="21dip"
                        android:layout_height="242dip"
                        android:background="@drawable/temperature_bar"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sanre_progressbar_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:text="正在初始化降温程序"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/sanre_progressbar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="10dip"
                android:max="200"
                android:progress="0"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/sanre_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/sanre_btn_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/sanre_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键散热"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>